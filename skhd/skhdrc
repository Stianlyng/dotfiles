meh - n : open ~/Downloads


# focus window
meh - f1 : yabai -m window --focus next || yabai -m window --focus first
meh - h : yabai -m window --focus west || yabai -m display --focus prev #|| yabai -m display --focus last
meh - j : yabai -m window --focus south
meh - k : yabai -m window --focus north
meh - l : yabai -m window --focus east || yabai -m display --focus next #|| yabai -m display --focus first
#meh - z : yabai -m window --focus stack.prev
#meh - c : yabai -m window --focus stack.next

# swap window
meh - f4 : yabai -m window --swap next || yabai -m window --swap first 
hyper - h : yabai -m window --swap west || ( yabai -m window --display prev && yabai -m display --focus prev )
hyper - j : yabai -m window --swap south
hyper - k : yabai -m window --swap north 
hyper - l : yabai -m window --swap east ||  ( yabai -m window --display next && yabai -m display --focus next )
# move window
#shift + cmd - h : yabai -m window --warp west
#shift + cmd - j : yabai -m window --warp south
#shift + cmd - k : yabai -m window --warp north
#shift + cmd - l : yabai -m window --warp east

# fast focus desktop
#meh - o : yabai -m space --focus recent
meh - u : yabai -m space --focus prev 
meh - i : yabai -m space --focus next 
meh - f6 : yabai -m space --focus next || yabai -m space --focus first

# move window to space
hyper - u : yabai -m window --space prev && yabai -m space --focus prev
hyper - i : yabai -m window --space next && yabai -m space --focus next

# focus monitor
#ctrl + alt - x  : yabai -m display --focus recent
meh - y  : yabai -m display --focus prev
meh - o  : yabai -m display --focus next

# balance size of windows
meh - b : yabai -m space --balance

# Create space on the active display
meh - t : yabai -m space --create

# destroy desktop
meh - w : yabai -m space recent --destroy

# rotate tree
meh - r : yabai -m space --rotate 90

# toggle window split type
meh - e : yabai -m window --toggle split

# float / unfloat window and restore position
# alt - t : yabai -m window --toggle float && /tmp/yabai-restore/$(yabai -m query --windows --window | jq -re '.id').restore 2>/dev/null || true
meh - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle sticky (show on all spaces)
meh - s : yabai -m window --toggle sticky
# toggle topmost (keep above other windows)
meh - a : yabai -m window --toggle topmost

# toggle picture-in-picture
#meh - h : yabai -m window --toggle border --toggle pip


